#:include menu menu

MainWidget:

<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'assets/images/bg1.jpg'
    point_perspective_x: self.width / 2
    point_perspective_y: self.height * .75

    MenuScreen:
        id: menu_screen
    Label:
        text: root.score_txt
        font_size: dp(20)
        font_name: 'assets/fonts/Eurostile.ttf'
        pos_hint: { "x": 0, "top": 1}
        size_hint: .18, .18