#:import menu menu

MainWidget:

<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: 'images/bg3.webp'
        Color:
            rgba: 0, 0, 0, 0.4  # 0.4 est la transparence (40%)
        Rectangle:
            size: self.size
            pos: self.pos
    menu_widget: menu_widget
    point_perspective_x: self.width / 2
    point_perspective_y: self.height * .75

    MenuWidget:
        id: menu_widget
    Label:
        text: root.score_txt
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        pos_hint: { "x": 0, "top": 1}
        size_hint: .18, .18


